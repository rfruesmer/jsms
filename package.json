{
  "name": "jsms",
  "version": "1.0.2-alpha.3",
  "description": "JavaScript Message Service",
  "scripts": {
    "test": "jest --collect-coverage",
    "build": "npm run clean && npm run compile && npm run lint && npm run test && npm run prepare-dist",
    "clean": "rimraf dist/**/*",
    "compile": "tsc",
    "prepare-dist": "rimraf dist/test && npm run generate-dts",
    "generate-dts": "dts-generator --project . --out ./dist/index.d.ts",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "tsc": "tsc",
    "tslint": "tslint",
    "jest": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rfruesmer/jsms.git"
  },
  "keywords": [
    "messaging",
    "message service",
    "event bus",
    "mediator"
  ],
  "author": "Reinhold FrÃ¼smer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rfruesmer/jsms/issues"
  },
  "homepage": "https://github.com/rfruesmer/jsms#readme",
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/uuid": "^3.4.5",
    "dts-generator": "^3.0.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.2"
  },
  "dependencies": {
    "uuid": "^3.3.3"
  },
  "files": [
    "dist/**/*"
  ],
  "types": "dist/index.d.ts"
}
