{
  "name": "jsms-client",
  "version": "1.0.0-alpha.4",
  "description": "A JavaScript Messaging Framework",
  "scripts": {
    "test": "jest --collect-coverage",
    "build": "npm run clean && npm run compile && npm run lint && npm run test && npm run prepare-dist",
    "clean": "rimraf ./dist/**/*",
    "compile": "tsc",
    "doc": "rimraf ./doc && typedoc --exclude \"+(node_modules|test|index.d.ts)\" --excludeNotExported --excludePrivate --excludeProtected --module commonjs --target ES6  --out ./doc .",
    "prepare-dist": "mvmv ./dist/src/* ./dist/* && rimraf ./dist/src && rimraf ./dist/test",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepublishOnly": "npm run build",
    "preversion": "npm run lint",
    "postversion": "git push && git push --tags",
    "tsc": "tsc",
    "tslint": "tslint",
    "jest": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rfruesmer/jsms-client.git"
  },
  "keywords": [
    "messaging",
    "message service",
    "event bus",
    "mediator"
  ],
  "author": "Reinhold Fr√ºsmer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rfruesmer/jsms-client/issues"
  },
  "homepage": "https://github.com/rfruesmer/jsms-client#readme",
  "devDependencies": {
    "@types/jest": "^24.0.18",
    "@types/uuid": "^3.4.5",
    "jest": "^24.9.0",
    "log4js": "^5.1.0",
    "mvmv": "^0.9.8",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.19.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.2"
  },
  "dependencies": {
    "@log4js-node/log4js-api": "^1.0.2",
    "uuid": "^3.3.3"
  },
  "files": [
    "dist/**/*",
    "index.d.ts"
  ],
  "types": "index.d.ts"
}
